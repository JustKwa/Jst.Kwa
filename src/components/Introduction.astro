  <!-- Right: intro text with overlay -->
  <div class="w-full ml-auto h-full retro-dialogue">
      <h1 class="font-bold absolute left-2 top-1">{name}</h1>
      <p class="summmary-text mt-10 leading-relaxed p-2">
